using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp5
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int[] numeros = new int[100];
            int contador = 0;
            string continuar;

            do
            {
                Console.Write("Ingrese un numero");
                int numero = int.Parse(Console.ReadLine());

                numeros[contador] = numero;
                contador++;

                if (contador == 100)
                {
                    Console.WriteLine("Se alcanzo el limite de 100 numeros.");
                    break;
                }
                Console.Write("Desea ingresar otro numero? (si/no): ");
                continuar = Console.ReadLine().ToLower();
            } while (continuar == "si" && contador < 100);

            if (contador == 0)
            {
                Console.WriteLine("No se ingresaron los numeros.");
                return;
            }

            int suma = 0;
            int max = numeros[0];
            int min = numeros[0];
            int posicionMaxima = 0;
            int posicionMinima = 0;

            Console.WriteLine("\nListado de numeros ingresados:");
            for (int i = 0; i < contador; i++)
            {
                Console.WriteLine($"{i}: {numeros[i]}");
                suma += numeros[i];

                if (numeros[i] > max)
                {
                    max = numeros[i];
                    posicionMaxima = i;
                }

                if (numeros[i] < min)
                {
                    min = numeros[i];
                    posicionMinima = i;
                }
            }
            double promedio = (double)suma / contador;

            Console.WriteLine($"\nPromedio: {promedio:F2}");
            Console.WriteLine($"Valor máximo: {max} en la posición {posicionMaxima}");
            Console.WriteLine($"Valor mínimo: {min} en la posición {posicionMinima}");
        }
    }
}